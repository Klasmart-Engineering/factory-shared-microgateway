{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default"
    },
    "github_com/devopsfaith/krakend-metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "router": {
      "logger_skip_paths": [
        "/__health",
        "/__stats"
      ]
    }
  },
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "name": "shared-microgateway",
  "port": 8080,
  "endpoints": [
      {{ template "subscriptions.tmpl" . }},
      {{ template "authorization.tmpl" . }},
      {
        "endpoint": "/lambda",
        "input_query_strings": [
          "request_id"
        ],
        "backend": [
          {
            "url_pattern": "/",
            "host": ["api.kidsloop.live"],
            "encoding": "json",
            "extra_config" : {
              "backend/lambda": {
                "function_name": "test-krakend-lambda-integration",
                "region": "eu-west-2",
                "max_retries": 1
              }
            }
          }
        ]
      }
  ]
}
